@model Cn.Com.Sve.OA.Entities.StudentHomeVisitRecord

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/lib/ligerUI/skins/Aqua/css/ligerui-all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/lib/ligerUI/skins/Gray/css/all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/lib/ligerUI/skins/ligerui-icons.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/lib/css/common.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.autocomplete.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Content/lib/jquery/jquery-1.7.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery/ui/jquery.ui.core.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery/ui/jquery.ui.widget.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery/ui/jquery.ui.position.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery/ui/jquery.ui.autocomplete.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/ligerUI/js/ligerui.all.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery-validation/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery-validation/jquery.metadata.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery-validation/messages_cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery-validation/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/js/common.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/js/LG.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/json2.js")" type="text/javascript"></script>
    <style type="text/css">
        body
        {
            font-size: 12px;
        }
        .l-table-edit
        {
        }
        .l-table-edit-td
        {
            padding: 4px;
        }
        .l-button-submit, .l-button-reset
        {
            width: 80px;
            float: left;
            margin-left: 10px;
            padding-bottom: 2px;
        }
        .l-verify-tip
        {
            left: 230px;
            top: 120px;
            z-index: 9999;
        }
    </style>
	<style type="text/css">
	.ui-autocomplete-loading { background: white url('@Url.Content("~/Content/themes/base/images/ui-anim_basic_16x16.gif")') right center no-repeat; }
	#f_UserName { width: 25em; }
	</style>
    <script type="text/javascript">
        $(function () {
            $("#Time").ligerDateEditor({ initValue: '@String.Format("{0:d}", this.Model.Time)' });
            $("#frmCondition").ligerForm();
        });
    </script>
    @if (this.ViewBag.Msg != null) { 
    <script type="text/javascript">
        $(function () {
            LG.showSuccess('@this.ViewBag.Msg ！');
        });
    </script>
    }

</head>
<body style="padding: 10px; height: 100%; text-align: center;">
     <div id="pnlByForm" style="width: 98%">
             <form id="frmCondition" class="l-form" action='@Url.Action("EditInfo", "StudentHomeVisitRecord")' method="post" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="@this.Model.Id" />
                <input type="hidden" name="StudentId" value="@this.Model.Student.Id" />
                <input type="hidden" name="ClazzId" value="@this.Model.Student.ClazzId" />
                <input type="hidden" name="ReviewerId" value="@this.Model.ReviewerId" />
                <input type="hidden" name="ReviewTime" value="@this.Model.ReviewTime" />
                <input type="hidden" name="ReviewComment" value="@this.Model.ReviewComment" />
                <table cellpadding="0" cellspacing="0" class="l-table-edit" style="width:800px" border="1">
                    <tr>
                        <td class='l-table-edit-td'>班级</td><td class='l-table-edit-td'>@this.Model.Student.Clazz.Name</td>
                        <td class='l-table-edit-td'>学员姓名</td><td class='l-table-edit-td'>@this.Model.Student.Name</td>
                </tr>
                <tr>
                        <td class='l-table-edit-td'>性别</td><td class='l-table-edit-td'>@this.Model.Student.Gender</td>
                        <td class='l-table-edit-td'>学员手机</td><td class='l-table-edit-td'>@this.Model.Student.Mobile</td>
                    </tr>

                    <tr>
                        <td class='l-table-edit-td'>家访类型</td><td class='l-table-edit-td'>
                            <select id="VisitType" name="VisitType">
                                <option value="平常家访">平常家访</option>
                                <option value="五一家访">五一家访</option>
                                <option value="国庆家访">国庆家访</option>
                                <option value="春节家访">春节家访</option>
                            </select>
                        </td>
                        <td class='l-table-edit-td'>家访日期</td><td class='l-table-edit-td'><input type='text' id='Time' name="Time" ltype='text' /></td>
                </tr>
                <tr>
                        <td class='l-table-edit-td'>开始时间</td><td class='l-table-edit-td'><input type='text' id='BeginTime' name="BeginTime" ltype='text' value="@this.Model.BeginTime" /></td>
                        <td class='l-table-edit-td'>结束时间</td><td class='l-table-edit-td'><input type='text' id='EndTime' name="EndTime" ltype='text' value="@this.Model.EndTime" /></td>
                    </tr>
                    <tr>
                        <td class='l-table-edit-td'>家访对象</td><td class='l-table-edit-td'><input type='text' id='Visitees' name="Visitees" ltype='text' value="@this.Model.Visitees" /></td>
                        <td class='l-table-edit-td'>家长电话</td><td class='l-table-edit-td'><input type='text' id='PhoneNo' name="PhoneNo" ltype='text' value="@this.Model.PhoneNo" /></td>
                </tr>
                <tr>
                        <td class='l-table-edit-td'>家访人员</td><td class='l-table-edit-td'><input type='text' id='Visitors' name="Visitors" ltype='text' value="@this.Model.Visitors" /></td>
                        <td class='l-table-edit-td'>家长联系卡</td><td class='l-table-edit-td'>
                            @if (this.Model.GiveContactCard.Equals("已送")) {
                            <input type='radio' name="GiveContactCard" ltype='radio' value="已送" checked="checked" />@Html.Raw("已送")
                            <input type='radio' name="GiveContactCard" ltype='radio' value="未送" />@Html.Raw("未送")
                            } else {
                            <input type='radio' name="GiveContactCard" ltype='radio' value="已送" />@Html.Raw("已送")
                            <input type='radio' name="GiveContactCard" ltype='radio' value="未送" checked="checked" />@Html.Raw("未送")
                            }
                        </td>
                    </tr>
                    <tr><td colspan="4" class='l-table-edit-td'>意见和建议：<br /><textarea name='Advice' id='Advice' ltype='text' class="l-textarea" style="width:100%;height:200;">@this.Model.Advice</textarea></td></tr>
                    <tr><td colspan="4" class='l-table-edit-td'>家访总结：<br /><textarea name='Summary' id='Summary' ltype='text' class="l-textarea" style="width:100%;height:200;">@this.Model.Summary</textarea></td></tr>
                    <tr><td colspan="4" class='l-table-edit-td'><input type="submit" id="btnAdd" value="保存" /></td></tr>
                </table>
             </form>
    </div>
</body>
</html>

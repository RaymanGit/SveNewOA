@model Cn.Com.Sve.OA.Web.Models.ViewModels.QualificationStudentSearchViewModel

@{
    Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/lib/ligerUI/skins/Aqua/css/ligerui-all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/lib/ligerUI/skins/Gray/css/all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/lib/ligerUI/skins/ligerui-icons.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/lib/css/common.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.autocomplete.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Content/lib/jquery/jquery-1.7.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery/ui/jquery.ui.core.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery/ui/jquery.ui.widget.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery/ui/jquery.ui.position.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery/ui/jquery.ui.autocomplete.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/ligerUI/js/ligerui.all.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery-validation/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery-validation/jquery.metadata.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery-validation/messages_cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/jquery-validation/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/js/common.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/js/LG.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/lib/json2.js")" type="text/javascript"></script>
    <style type="text/css">
        body
        {
            font-size: 12px;
        }
        .l-table-edit
        {
        }
        .l-table-edit-td
        {
            padding: 4px;
        }
        .l-button-submit, .l-button-reset
        {
            width: 80px;
            float: left;
            margin-left: 10px;
            padding-bottom: 2px;
        }
        .l-verify-tip
        {
            left: 230px;
            top: 120px;
            z-index: 9999;
        }
    </style>
	<style type="text/css">
	.ui-autocomplete-loading { background: white url('@Url.Content("~/Content/themes/base/images/ui-anim_basic_16x16.gif")') right center no-repeat; }
	#f_UserName { width: 25em; }
	</style>
    <script type="text/javascript">
    	$(function () {
    		$("#frmCondition").ligerForm();
    	});
    </script>
</head>
<body style="padding: 10px; height: 100%; text-align: center;">
    <div id="pnlByCondition" style="width: 98%">
             <form id="frmCondition" class="l-form" action='' method="post" enctype="multipart/form-data">
                <table cellpadding="0" cellspacing="0" class="l-table-edit">
                <tr>
                    <td style='text-align: right;' class='l-table-edit-td'>
                        报名年份
                    </td>
                    <td style='text-align: left;' class='l-table-edit-td'>
						<input type='text' id='Year' name="Year" ltype='text' value="@(this.Model.Criteria.Year.HasValue ? this.Model.Criteria.Year.ToString() : "")" />
                    </td>
                    <td style='text-align: right;' class='l-table-edit-td'>
                        学员姓名
                    </td>
                    <td style='text-align: left;' class='l-table-edit-td'>
                        <input type='text' id='NameSrh' name="NameSrh" ltype='text' value="@this.Model.Criteria.NameSrh" />
                    </td>
                    <td style='text-align: right;' class='l-table-edit-td'>
                        学院老师
                    </td>
                    <td style='text-align: left;' class='l-table-edit-td' >
                        <input type='text' id='ConsultantSrh' name="ConsultantSrh" ltype='text' value="@this.Model.Criteria.ConsultantSrh" />
                    </td>
                    <td style='text-align: right;' class='l-table-edit-td'>
                        介绍人
                    </td>
                    <td style='text-align: left;' class='l-table-edit-td' >
                        <input type='text' id='ReferrerSrh' name="ReferrerSrh" ltype='text' value="@this.Model.Criteria.ReferrerSrh" />
                    </td>
                </tr>
                <tr>
                    <td class='l-table-edit-td' style='text-align: right;'>
                        报读学校
                    </td>
                    <td class='l-table-edit-td' style='text-align: left; width: 160px'>
                        <select id="TargetSchoolNameSrh" name="TargetSchoolNameSrh"  style="width:98%;">
                            @if (String.IsNullOrEmpty(this.Model.Criteria.TargetSchoolNameSrh)) {
	                        <option value="" selected="selected" >全部</option>
                            } else {
	                        <option value="" >全部</option>
                            }
							@foreach (var s in this.Model.Schools) {
								if (this.Model.Criteria.TargetSchoolNameSrh != null && this.Model.Criteria.TargetSchoolNameSrh.Equals(s.Name)) {
								<option value="@s.Name" selected="selected" >@s.Name</option>
								} else {
								<option value="@s.Name">@s.Name</option>
								}
							}
                        </select>
                    </td>
                   <td class='l-table-edit-td' style='text-align: right;'>
                        上报状态
                    </td>
                    <td class='l-table-edit-td' style='text-align: left; width: 160px'>
                        <select id="SubmitStatusSrh" name="SubmitStatusSrh"  style="width:98%;">
                            @if (String.IsNullOrEmpty(this.Model.Criteria.SubmitStatusSrh)) {
	                        <option value="" selected="selected" >全部</option>
							} else {
	                        <option value="" >全部</option>
							}
                            @if (this.Model.Criteria.SubmitStatusSrh != null && this.Model.Criteria.SubmitStatusSrh.Equals("未上报")) {
	                        <option value="未上报" selected="selected" >未上报</option>
							} else {
	                        <option value="未上报">未上报</option>
							}
                            @if (this.Model.Criteria.SubmitStatusSrh != null && this.Model.Criteria.SubmitStatusSrh.Equals("已上报")) {
	                        <option value="已上报" selected="selected" >已上报</option>
							} else {
	                        <option value="已上报">已上报</option>
							}
                        </select>
                    </td>
                    <td class='l-table-edit-td' style='text-align: right;'>
                        录取状态
                    </td>
                    <td class='l-table-edit-td' style='text-align: left; width: 160px'>
                        <select id="OfferStatusSrh" name="OfferStatusSrh"  style="width:98%;">
                            @if (String.IsNullOrEmpty(this.Model.Criteria.OfferStatusSrh)) {
	                        <option value="" selected="selected" >全部</option>
							} else {
	                        <option value="" >全部</option>
							}
                            @if (this.Model.Criteria.OfferStatusSrh != null && this.Model.Criteria.OfferStatusSrh.Equals("未录取")) {
	                        <option value="未录取" selected="selected" >未录取</option>
							} else {
	                        <option value="未录取">未录取</option>
							}
                            @if (this.Model.Criteria.OfferStatusSrh != null && this.Model.Criteria.OfferStatusSrh.Equals("已录取")) {
	                        <option value="已录取" selected="selected" >已录取</option>
							} else {
	                        <option value="已录取">已录取</option>
							}
                            @if (this.Model.Criteria.OfferStatusSrh != null && this.Model.Criteria.OfferStatusSrh.Equals("录取不成功")) {
	                        <option value="录取不成功" selected="selected" >录取不成功</option>
							} else {
	                        <option value="录取不成功">录取不成功</option>
							}
                        </select>
                    </td>
                   <td class='l-table-edit-td' style='text-align: right;'>
                        缴费状态
                    </td>
                    <td class='l-table-edit-td' style='text-align: left; width: 160px'>
                        <select id="PayStatusSrh" name="PayStatusSrh"  style="width:98%;">
                            @if (String.IsNullOrEmpty(this.Model.Criteria.PayStatusSrh)) {
	                        <option value="" selected="selected" >全部</option>
							} else {
	                        <option value="" >全部</option>
							}
                            @if (this.Model.Criteria.PayStatusSrh != null && this.Model.Criteria.PayStatusSrh.Equals("未缴费")) {
	                        <option value="未缴费" selected="selected" >未缴费</option>
							} else {
	                        <option value="未缴费">未缴费</option>
							}
                            @if (this.Model.Criteria.PayStatusSrh != null && this.Model.Criteria.PayStatusSrh.Equals("已缴费")) {
	                        <option value="已缴费" selected="selected" >已缴费</option>
							} else {
	                        <option value="已缴费">已缴费</option>
							}
                            @if (this.Model.Criteria.PayStatusSrh != null && this.Model.Criteria.PayStatusSrh.Equals("分期付款")) {
	                        <option value="分期付款" selected="selected" >分期付款</option>
							} else {
	                        <option value="分期付款">分期付款</option>
							}
                        </select>
                    </td>
                </tr>
                <tr>
                    <td style='text-align: right;' class='l-table-edit-td'>
                        持证状态
                    </td>
                    <td style='text-align: left;' class='l-table-edit-td' >
                        <select id="PaperStatusSrh" name="PaperStatusSrh"  style="width:98%;">
                            @if (String.IsNullOrEmpty(this.Model.Criteria.PaperStatusSrh)) {
	                        <option value="" selected="selected" >全部</option>
							} else {
	                        <option value="" >全部</option>
							}
                            @if (this.Model.Criteria.SubmitStatusSrh != null && this.Model.Criteria.PaperStatusSrh.Equals("未持证")) {
	                        <option value="未持证" selected="selected" >未持证</option>
							} else {
	                        <option value="未持证">未持证</option>
							}
                            @if (this.Model.Criteria.SubmitStatusSrh != null && this.Model.Criteria.PaperStatusSrh.Equals("已持证")) {
	                        <option value="已持证" selected="selected" >已持证</option>
							} else {
	                        <option value="已持证">已持证</option>
							}
                        </select>
                    </td>
                    <td style="text-align:center" colspan="4">
                        <input type="submit" id="btnSearch" value="查询" />
                    </td>

                </tr>

                </table>
            </form>
    </div>


        <div class="searchbox" style="padding-left:40px;">
            <table cellpadding="0" cellspacing="0" class="l-table-edit" style="width:100%;">
                <tr>
                    @for (int i = 0; i < this.Model.Students.Count; i++) {
                        <td style='text-align: left; width:25%;' class='l-table-edit-td'>
                            <a href="#" onclick="top.f_addTab('tab-display-qstudent-@this.Model.Students[i].Id', '@this.Model.Students[i].Name', '@Url.Action("Display", "QualificationStudent")' + '?id=@this.Model.Students[i].Id');return false;">@this.Model.Students[i].Name</a>
                        </td>
						if ((i + 1) % 4 == 0) { 
                        @Html.Raw("</tr><tr>");
						}
					}
                </tr>
            </table>
        </div>

</body>
</html>

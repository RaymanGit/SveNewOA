            });

            LG.ajax({
            type: 'AjaxMemberManage',
            method: 'GetCurrentUser',
            success: function (user) {
            $(".l-topmenu-username").html(user.Title + "，");
            },
            error: function () {
            LG.tip('用户信息加载失败');
            }
            });
            */
            $("#pageloading").hide();
        });
    </script>
</body>
